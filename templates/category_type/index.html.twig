<!DOCTYPE html>

<title>Category index</title>

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.content }}</td>
                <td>{{ category.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('category_type_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_type_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_type_new') }}">Create new</a>
{% endblock %}
